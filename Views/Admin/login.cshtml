            <section>				
                <div id="container_demo" >
                    <div id="wrapper1">
                        <div id="login" class="animate form">
                            <form  action="/Admin/adminLogin" method="post" autocomplete="on"> 
                                <h1>&nbsp&nbsp&nbsp&nbspAdministrator Log In</h1> 
                                <p> 
                                    <label for="username" class="uname" data-icon="u" > Your username </label>
                                    <input id="username" name="userName" required="required" type="text" placeholder="myusername"/>
                                </p>

                                <input type="button" id="b1" value="Check"/>
                                <br/>
                                <div id="result"></div>
                                <div id="checking">Checking...</div>
    @Scripts.Render("~/bundles/jquery")
    <script>

        $(document).ready(function () {

            $('#checking').hide();

            $('#b1').click(function () {
                var userName = $('#username').val();

                //alert('User Name ='+ userName);
                $('#checking').show();
                $.getJSON("/Admin/CheckUserName?UserName=" + userName, function (data) {
                    $('#checking').hide();
                    if (data) {
                        $('#result').text("User does not exist in database");

                    }
                    else {
                        $('#result').text("User exists");
                    }
                });

            });

        });
    </script>


