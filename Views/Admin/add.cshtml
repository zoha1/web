@model EAD_project_4.Models.Recipe
@{
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<body id="page9">
<!--==============================header=================================-->
<header>
  <div class="row-top">
    <div class="main">
      <div class="wrapper">
        <h1><a href="/Admin/adminStart">Cook Book</a></h1>
        <nav>
          <ul class="menu">
            <li><a href="/Admin/adminStart">Home</a></li>
            <li><a class="active" href="/User/add">Add Recipes</a></li>
              <li><a href="/Admin/viewRec">View</a></li>
             <li><a href="/Admin/search">Search </a></li>
            <li><a href="/Admin/delete">Delete </a></li>
            <li><a href="/Admin/update">Update</a></li>
             <li><a href="/Admin/viewSuggestions">View Suggestions</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
  <div class="row-bot">
    <div class="row-bot-bg">
      <div class="main">
        <h2>Tasty Recipes <span>for any Occasion</span></h2>
      </div>
    </div>
  </div>
</header>
<!--==============================content================================-->

<section id="content">
  <div class="main">
    <div class="wrapper">

      <article class="col-2">
        <h3 class="p1">Add Recipe</h3>
          @using (Html.BeginForm("addRec", "Admin", FormMethod.Post , new { id = "contact-form", enctype="multipart/form-data"} ))
        {
          <fieldset>
              @Html.AntiForgeryToken()
              @Html.ValidationSummary(true)

            <label><span class="text-form">Category:</span>
              @Html.TextBoxFor(m=>m.Category)
            </label>
              @Html.ValidationMessageFor(model => model.Category) 
            <label><span class="text-form">Recipe's Name:</span>
              @Html.TextBoxFor(m=>m.Name)
            </label>
              @Html.ValidationMessageFor(model => model.Name)
                  <label><span class="text-form">Ingredients:</span>
                <textarea name="Ingredients" rows="5" ></textarea>
                </label>
              @Html.ValidationMessageFor(model => model.Ingredients)
              <br />
               <label><span class="text-form">Recipe:</span>
                <textarea name="Recipe1" rows="5"></textarea>
                </label>
              @Html.ValidationMessageFor(model => model.Recipe1)
                 <br />
              <label><span class="text-form">Upload Picture:</span>
                  <input type="file" name="image" /> 
              </label>
              @Html.ValidationMessageFor(model => model.Image)

            <div class="wrapper">
              <div class="extra-wrap">
               <div class="button-2"><input type="submit" value="Add" /></div>
              </div>
            </div>
          </fieldset>
          }
      </article>
    </div>
  </div>
</section>

<!--==============================footer=================================-->
    <script type="text/javascript">Cufon.now();</script>
</body>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}