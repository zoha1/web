</header>
<!--==============================content================================-->

<section id="content">
  <div class="main">
    <div class="wrapper">

      <article class="col-2">
        <h3 class="p1">Update Recipe</h3>
        <form id="contact-form" action="/Admin/updateRec" method="post" enctype="multipart/form-data">
          <fieldset>

              <label><span class="text-form">Recipe's ID:</span>
              <input name="id" type="text" />
            </label>

              <label><span class="text-form">Recipe's Name:</span>
              <input name="nam" type="text" />
            </label>

            <label><span class="text-form">Category:</span>
              <input name="category" type="text" />
            </label>
            <label><span class="text-form">Ingredients:</span>
                <textarea name="ing" rows="5" ></textarea>
                </label>
              <br />
               <label><span class="text-form">Recipe:</span>
                <textarea name="rec" rows="5"></textarea>
                </label>
                 <br />
              <label><span class="text-form">Upload Picture:</span>
                  <input type="file" name="image" /> 
              </label>

            <div class="wrapper">
              <div class="extra-wrap">
               <div class="button-2"><input type="submit" value="Update" /></div>
              </div>
            </div>
          </fieldset>
        </form>
      </article>
    </div>
  </div>
</section>

