@model List<EAD_project_4.Models.Suggestion>
@{
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<h1>Suggestions</h1>

<!--==============================header=================================-->
<header>
  <div class="row-top">
    <div class="main">
      <div class="wrapper">
        <h1><a href="/User/index">Cook Book</a></h1>
        <nav>
          <ul class="menu">
           <li><a href="/Admin/adminStart">Home</a></li>
            <li><a href="/Admin/add">Add Recipes</a></li>
              <li><a href="/Admin/add">View</a></li>
             <li><a href="/Admin/search">Search </a></li>
            <li><a href="/Admin/delete">Delete </a></li>
            <li><a href="/Admin/update">Update</a></li>
             <li><a class="active" href="/Admin/viewSuggestions">View Suggestions</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
  <div class="row-bot">
    <div class="row-bot-bg">
      <div class="main">
        <h2>Tasty Recipes <span>for any Occasion</span></h2>
      </div>
    </div>
  </div>
</header>

@foreach (var s in Model)
    {
        <table>
            <tr><td><h2>Suggestion ID: @s.Id</h2></td><tr>
         </table>

     <br /><br /><br />
    
         <table>
         <tr>
             <td>
                 <h2>Suggested by User: @s.UserName</h2>
             </td>
         </tr>
     </table>
     
     <br /><br /><br />
    
     <table>
         <tr>
             <td>
                 <h2>User's Email: @s.Email</h2>
             </td>
         </tr>
     </table>
     
     <br /><br /><br />
     <table>
         <tr>
             <td>
                 <h2>Suggestion: @s.Suggestion1</h2>
             </td>
         </tr>
     </table>

                }